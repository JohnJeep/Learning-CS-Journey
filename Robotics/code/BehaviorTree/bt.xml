<root main_tree_to_execute="MainTree">
  
  <!-- 主行为树 -->
  <BehaviorTree ID="MainTree">
    <Fallback>
      <Sequence>
        <Condition ID="IsBatteryOK" />
        <Action ID="MoveTo" target="1;2;0" speed="0.5"/>
      </Sequence>
      <Action ID="Recharge" />
    </Fallback>
  </BehaviorTree>
  
  <!-- 节点模型定义（Groot 需要这个） -->
  <TreeNodesModel>
    <!-- 动作节点 -->
    <Action ID="MoveTo">
      <input_port name="target" type="Pose2D">0;0;0</input_port>
      <input_port name="speed" type="double">1.0</input_port>
      <output_port name="navigation_result" type="int" />
    </Action>
    
    <Action ID="Recharge">
      <input_port name="duration" type="int">5</input_port>
    </Action>
    
    <!-- 条件节点 -->
    <Condition ID="IsBatteryOK">
      <input_port name="min_level" type="double">20.0</input_port>
    </Condition>
    
    <!-- 控制节点（通常不需要额外配置） -->
    <Sequence />
    <Fallback />
    <Parallel />
  </TreeNodesModel>
</root>